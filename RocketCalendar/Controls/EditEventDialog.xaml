            <RowDefinition Height="*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="10"
            FontSize="24"
            FontWeight="Medium"
            Text="Add or Edit an Event" />
        <ui:TextBox
            Grid.Row="1"
            Grid.Column="0"
            Margin="10"
            VerticalAlignment="Center"
            PlaceholderText="Enter Event Title..."
            Text="{Binding EdittedEvent.EventTitle, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}" />
        <ui:Button
            Grid.Row="4"
            Grid.Column="0"
            Margin="10"
            Appearance="Primary"
            Content="Save Event"
            Icon="{ui:SymbolIcon Save24}" />
        <ui:Button
            Grid.Row="4"
            Grid.Column="1"
            Margin="10"
            Appearance="Secondary"
            Command="{Binding ViewModel.CreateEventCommand, Mode=OneWay}"
            Content="Close" />

